
@{
    ViewBag.Title = "Medicamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Version = System.Configuration.ConfigurationManager.AppSettings["version"];
}



@section Scripts {

    <script src="~/Scripts/pages/Medicinas/Index.js?V=@ViewBag.Version"></script>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title float-start">@ViewBag.Title</h4>
                <!-- Button trigger modal -->
                <button type="button" onclick="botones(1)" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#ModalAdd">
                    Nuevo
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="lista" class="table table-bordered table-striped"></table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="ModalAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="form" name="form">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalAddLabel">Crear elemento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="mb-3" hidden>
                            <label for="id" class="form-label">Id</label>
                            <input type="text" class="form-control" id="id">
                        </div>
                        <div class="col-12 mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" required placeholder="Escribe el nombre del medicamento">
                        </div>

                        <div class="col-12 mb-3">
                            <label for="concentracion" class="form-label">Concentración</label>
                            <input type="text" class="form-control" id="concentracion" required placeholder="Escribe la concentración">
                        </div>

                        <div class="col-12 mb-3">
                            <label for="forma" class="form-label">Forma farmacéutica</label>
                            <select class="form-control" id="forma" required placeholder="Escribe la forma farmacéutica del medicamento">
                                <option value=""></option>
                            </select>
                        </div>
                        
                        <div class="col-12 mb-3">
                            <label for="precio" class="form-label">Precio</label>
                            <input type="number" class="form-control" id="precio" step="any" required placeholder="Escribe el precio del medicamento">
                        </div>
                        
                        <div class="col-12 mb-3">
                            <label for="stock" class="form-label">Stock</label>
                            <input type="number" class="form-control" id="stock" required placeholder="Escribe el stock del medicamento">
                        </div>

                        <div class="col-12 mb-3">
                            <label for="presentacion" class="form-label">Presentación</label>
                            <input type="text" class="form-control" id="presentacion" required placeholder="Escribe la presentación">
                        </div>

                        <div class="col-12 mb-3">
                            <label for="estatus" class="form-label">Habilitado</label>
                            <input type="checkbox" id="estatus" name="estatus" />
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btncancelar" name="btncancelar" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" id="buttonAdd" class="btn btn-primary" onclick="btnAdd()">Guardar</button>
                    <button type="button" id="buttonSave" class="btn btn-primary" onclick="btnSave()">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
